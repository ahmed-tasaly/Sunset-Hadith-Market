<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@color/main_color"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/top_text_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/almarai_bold"
            android:text="حول التطبيق"
            android:textColor="@color/bnv_tab_item_foreground"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="هذا العمل خالصا لوجه الله عز وجل"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/top_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="نسال الله تعالى أن يتقبله منا جميعا"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_text" />

    <TextView
        android:id="@+id/top_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="وأن يجمعنا بنبيه الكريم في جناته"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_text_2" />

    <TextView
        android:id="@+id/top_text_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="جنة الفردوس والخلد والنعيم"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_text_3" />

    <TextView
        android:id="@+id/top_text_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:elevation="@dimen/_2sdp"
        android:text="إصدار التطبيق"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@+id/top_text_6"
        app:layout_constraintEnd_toEndOf="@+id/top_text_4"
        app:layout_constraintStart_toStartOf="@+id/top_text_4" />

    <TextView
        android:id="@+id/top_text_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:elevation="@dimen/_2sdp"
        android:text="3.4.173"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/top_text_5"
        app:layout_constraintStart_toStartOf="@+id/top_text_5" />
</androidx.constraintlayout.widget.ConstraintLayout>