<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_212sdp"
        android:background="#FFF1DA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
    </View>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="#FFF1DA"
        android:elevation="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/support_icon"
            android:layout_width="@dimen/_19sdp"
            android:layout_height="@dimen/_19sdp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_16sdp"
            android:background="@drawable/heart" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aref"
            android:text="شارك التطبيق"
            android:textColor="#000000"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/support"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="خير الناس .. أنفعهم للناس"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/details_text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="كن من خيار الناس وشاركنا الأجر والثواب"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_text" />

    <TextView
        android:id="@+id/details_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="قم بنشر التطبيق بين جميع أصدقائك"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_text_one" />

    <TextView
        android:id="@+id/details_text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/almarai_bold"
        android:text="وشارك أحاديث وسيرة النبي صلى الله عليه وسلم"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_text_two"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/share_app_button"
        android:layout_width="307dp"
        android:layout_height="@dimen/_47sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/rounder_speak_button"
        android:elevation="@dimen/_20sdp"
        android:text="نسخ الرابط للمشاركة"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_text_three" />

    <Button
        android:id="@+id/follow_us_on_facebook_button"
        android:layout_width="307dp"
        android:layout_height="@dimen/_47sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rounder_speak_button"
        android:elevation="@dimen/_2sdp"
        android:text="تابعنا على الفيسبوك"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share_app_button" />

    <Button
        android:id="@+id/join_us_in_telegram_button"
        android:layout_width="307dp"
        android:layout_height="@dimen/_47sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rounder_speak_button"
        android:elevation="@dimen/_2sdp"
        android:text="إنضم عبر التليجرام"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/follow_us_on_facebook_button" />

    <Button
        android:id="@+id/follow_us_on_twitter_button"
        android:layout_width="307dp"
        android:layout_height="@dimen/_47sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rounder_speak_button"
        android:elevation="@dimen/_2sdp"
        android:text="تابعنا على تويتر"
        android:textColor="@color/bnv_tab_item_foreground"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/join_us_in_telegram_button"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

